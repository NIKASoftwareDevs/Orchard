<script>
    function runSearch() {
        window.location = 'Search?culture=en-US&q=' + encodeURIComponent($('#main-search').val());
    }

    $(function () {
        $('#main-search').keydown(function (event) {
            if (event.keyCode == 13) {
                runSearch();
            }
        });

        $('#main-search-button').click(function (event) {
            runSearch();
        });
    });

	$(document).ready(function()
	{
		var intId;
		var delta;

		$('#btn-close').on('click', function(event) 
		{
			delta = 500;
			event.preventDefault(); // To prevent following the link (optional)
			$('#sliderFrame').css({"overflow-y":"hidden"});
			$("#sliderFrame").css({"height":"300px"});
			$("#slider-ctrl").css({"margin-top":"-20px"});
			$("#wcftk-heading").css({"bottom":"0px"});
//			intId = setInterval(slider_update(0), 10) // draw every 10ms 
		});	

		$('#btn-open').on('click', function(event) 
		{
			delta = 500;
			event.preventDefault(); // To prevent following the link (optional)
			$("#sliderFrame").css({"height":"750px"});
			$('#sliderFrame').css({"overflow-y":"show"});
			$("#slider-ctrl").css({"margin-top":"-50px"});
			$("#wcftk-heading").css({"bottom":"30px"});
//			intId = setInterval(slider_update(1), 10) // draw every 10ms 
		});

		function slider_update(dir)
		{
			var start = document.getElementById("slider").offsetHeight;

			while (delta > 0)
			{
				if (dir==1)
					start++;
				else
					start--;

				delta--;

				document.getElementById("slider").style.height = start + 'px' // show frame  
			}

			clearInterval(intId) 
		}
	});

</script>

